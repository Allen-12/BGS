<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ComboBox fx:id="selectHouse" layoutX="199.0" layoutY="218.0" onAction="#initializeVisitorComboBox" prefHeight="30.0" prefWidth="202.0" promptText="Please select a house" />
      <Label layoutX="33.0" layoutY="72.0" prefHeight="135.0" prefWidth="534.0" text="SELECT THE HOUSE WHOSE VISITOR DETAILS YOU WANT TO CHANGE" textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="Bell MT Bold" size="36.0" />
         </font>
      </Label>
      <Button fx:id="edit" layoutX="252.0" layoutY="335.0" mnemonicParsing="false" onAction="#editDetails" prefHeight="32.0" prefWidth="96.0" text="EDIT">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Button>
      <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#back" prefHeight="33.0" prefWidth="113.0" text="BACK">
         <font>
            <Font name="Bell MT" size="18.0" />
         </font>
         <graphic>
            <ImageView fitHeight="29.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/back.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="delete" layoutX="252.0" layoutY="335.0" mnemonicParsing="false" onAction="#deleteVisitor" prefHeight="32.0" prefWidth="96.0" text="DELETE">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Button>
      <ComboBox fx:id="selectVisitor" layoutX="199.0" layoutY="274.0" onAction="#getSelectedVisitor" prefHeight="25.0" prefWidth="202.0" promptText="Select a visitor" />
   </children>
</AnchorPane>
